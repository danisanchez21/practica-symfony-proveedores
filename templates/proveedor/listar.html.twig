{% extends 'base.html.twig' %}

{% block title %}Listado de proveedores{% endblock %}

{% block body %}
    <h1>Listado de Proveedores</h1>

    <table border="1" cellpadding="8" cellspacing="0">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th>Creado en</th>
                <th>Actualizado en</th>
            </tr>
        </thead>
        <tbody>
            {% for proveedor in proveedores %}
                <tr>
                    <td>{{ proveedor.nombre }}</td>
                    <td>{{ proveedor.email }}</td>
                    <td>{{ proveedor.telefono }}</td>
                    <td>{{ proveedor.tipo|capitalize }}</td>
                    <td>{{ proveedor.activo ? 'Sí' : 'No' }}</td>
                    <td>{{ proveedor.creadoEn|date('d/m/Y H:i') }}</td>
                    <td>{{ proveedor.actualizadoEn|date('d/m/Y H:i') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No hay proveedores registrados.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
