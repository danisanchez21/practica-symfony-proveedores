{% extends 'proveedor/base.html.twig' %}
{% import 'macros/login_errors.html.twig' as login_errors %}

{% block title %}Iniciar sesión{% endblock %}

{% block panel_content %}
<div class="max-w-sm mx-auto bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-semibold text-[#e43d3d] mb-6 text-center">Iniciar sesión</h2>

    {{ login_errors.render_error(error) }}

    <form method="post">
        <div class="mb-4">
            <label for="email" class="block font-medium text-gray-800">Email</label>
            <input type="email" name="_email" id="email" value="{{ last_username|default('') }}" required autofocus class="w-full border rounded p-2">
        </div>

        <div class="mb-4">
            <label for="password" class="block font-medium text-gray-800">Contraseña</label>
            <input type="password" name="_password" id="password" required class="w-full border rounded p-2">
        </div>

        <div class="flex justify-end">
            <button type="submit" class="px-4 py-2 bg-[#e43d3d] text-white rounded hover:bg-red-600 transition">Acceder</button>
        </div>
    </form>
</div>
{% endblock %}
